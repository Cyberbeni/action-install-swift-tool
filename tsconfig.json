{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    // Build:
    "incremental": false,
    "rootDir": "./src",
    "declaration": false,

    // Lint:
    "strict": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
