{
  "compilerOptions": {
    // Build:
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",

    // Lint:
    "strict": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "types"]
}
