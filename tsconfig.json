{
  "compilerOptions": {
    // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    // Build:
    "incremental": false,
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "rootDir": "./src",
    "esModuleInterop": true,
    "declaration": false,

    // Lint:
    "strict": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
